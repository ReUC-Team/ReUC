datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ========= PRISMA MODELING RULES =========
// DO NOT BREAK THESE RULES – the API and Admin Panel depend on them
//
// 1. Model names must use Pascal_Snake_Case (Singular) (e.g., `User`, `ProjectType`)
// 2. Each model must map to a Pascal_Snake_Case (Plural) table using `@@map()`
//       ⤷ Example: `@@map("Users")`, `@@map("User_Statuses")`
// 3. All field names must use camelCase
// 4. Any field must be stored in `snake_case` in the database explicitly mapped using `@map()`
//       ⤷ Example: `middleName String? @map("middle_name")`
// 5. All models must include: 
//       - `createdAt DateTime @default(now()) @map("created_at")`
//       - `updatedAt DateTime @updatedAt @map("updated_at")`
// 6. Use full English words in model and field names. Avoid abbreviations.
// 7. Use consistent naming for foreign key fields (e.g., `userStatusId`, mapped to `user_status_id`)
// 8. Primary keys must follow these naming rules:
//       - If it is an incremental ID, it must be named as `modelname_id`.
//       - If it is a UUID, it must be named as `uuid_modelname`.
// These conventions are required to support dynamic table/field mapping, introspection, and UI consistency.
// Breaking them may cause the system to crash or behave unpredictably.

// ================== USERS RELATED MODELS ==================
model User {
  uuid_user   String       @id @default(uuid())
  email       String       @unique
  password    String
  firstName   String?      @map("first_name")
  middleName  String?      @map("middle_name")
  lastName    String?      @map("last_name")
  status      Int?         @map("user_status_id")
  userStatus  User_Status? @relation(fields: [status], references: [user_status_id])
  lastLoginIp String?      @map("last_login_ip")
  lastLoginAt DateTime?    @map("last_login_at")
  createdAt   DateTime     @default(now()) @map("created_at")
  updatedAt   DateTime     @updatedAt @map("updated_at")

  admin     Admin?
  student   Student?
  professor Professor?
  outsider  Outsider?

  @@index([email])
  @@map("Users")
}

model Admin {
  uuid_admin String   @id @default(uuid())
  uuidUser   String   @unique @map("uuid_user")
  user       User     @relation(fields: [uuidUser], references: [uuid_user])
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  @@map("Admins")
}

model Student {
  uuid_student   String          @id @default(uuid())
  uuidUser       String          @unique @map("uuid_user")
  user           User            @relation(fields: [uuidUser], references: [uuid_user])
  universityId   String          @unique @map("university_id")
  averageGrade   Float?          @map("average_grade")
  enrollmentYear DateTime?       @map("enrollment_year")
  status         Int?            @map("student_status_id")
  studentStatus  Student_Status? @relation(fields: [status], references: [student_status_id])
  createdAt      DateTime        @default(now()) @map("created_at")
  updatedAt      DateTime        @updatedAt @map("updated_at")

  @@index([uuidUser])
  @@index([universityId])
  @@map("Students")
}

model Professor {
  uuid_professor String          @id @default(uuid())
  uuidUser       String          @unique @map("uuid_user")
  user           User            @relation(fields: [uuidUser], references: [uuid_user])
  universityId   String          @unique @map("university_id")
  role           Int?            @map("professor_role_id")
  professorRole  Professor_Role? @relation(fields: [role], references: [professor_role_id])
  createdAt      DateTime        @default(now()) @map("created_at")
  updatedAt      DateTime        @updatedAt @map("updated_at")

  @@index([uuidUser])
  @@index([universityId])
  @@map("Professors")
}

model Outsider {
  uuid_outsider    String   @id @default(uuid())
  uuidUser         String   @unique @map("uuid_user")
  user             User     @relation(fields: [uuidUser], references: [uuid_user])
  organizationName String?  @map("organization_name")
  phoneNumber      String?  @map("phone_number")
  location         String?  @map("location")
  createdAt        DateTime @default(now()) @map("created_at")
  updatedAt        DateTime @updatedAt @map("updated_at")

  application Application[]

  @@index([uuidUser])
  @@map("Outsiders")
}

// ================== PROJECT RELATED MODELS ==================

/**
 * TODO: For futures features this fields could be added
 * status (enum)      submitted, reviewed, approved, rejected, etc.
 * reviewedBy         Admin UUID who reviewed it
 * reviewNotes        Internal notes during evaluation
 * archivedAt         Soft-delete logic
 */
model Application {
  uuid_application String   @id @default(uuid())
  uuidOutsider     String   @map("uuid_outsider")
  outsider         Outsider @relation(fields: [uuidOutsider], references: [uuid_outsider])
  title            String
  shortDescription String   @map("short_description")
  description      String
  deadline         DateTime
  visibility       String?
  createdAt        DateTime @default(now()) @map("created_at")
  updatedAt        DateTime @updatedAt @map("updated_at")

  project                Project[]
  applicationProjectType Application_Project_Type[]
  applicationFaculty     Application_Faculty[]
  applicationProblemType Application_Problem_Type[]

  @@index([uuidOutsider])
  @@index([createdAt])
  @@map("Applications")
}

model Project {
  // TODO: checkout reflux usage and solve how to save and use
  // for a cleaner looks in the uri instead of uuid
  uuid_project    String         @id @default(uuid())
  uuidApplication String         @map("uuid_application")
  application     Application    @relation(fields: [uuidApplication], references: [uuid_application])
  topicInterest   String?        @map("topic_interest")
  type            Int            @map("project_type_id")
  projectType     Project_Type   @relation(fields: [type], references: [project_type_id])
  estimatedTime   String         @map("estimated_time")
  // uuid_team
  status          Int
  projectStatus   Project_Status @relation(fields: [status], references: [project_status_id])
  createdAt       DateTime       @default(now()) @map("created_at")
  updatedAt       DateTime       @updatedAt @map("updated_at")

  @@index([uuidApplication])
  @@index([type])
  @@index([createdAt]) // filtering or sorting by date
  @@index([status]) // filtering by status
  @@map("Projects")
}

// ================== UNIVERSITY RELATED MODELS ==================
model Professor_Role {
  professor_role_id Int      @id @default(autoincrement())
  name              String
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")

  professors Professor[]

  @@map("Professor_Roles")
}

model Faculty {
  faculty_id Int      @id @default(autoincrement())
  name       String   @unique
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  applicationFaculty Application_Faculty[]

  @@map("Faculties")
}

model Project_Type {
  project_type_id     Int      @id @default(autoincrement())
  name                String   @unique
  estimatedTime       String   @map("estimated_time")
  minTeamMembersSize  Int      @map("min_team_members_size")
  maxTeamMembersSize  Int      @map("max_team_members_size")
  minTeamAdvisorsSize Int      @map("min_team_advisors_size")
  maxTeamAdvisorsSize Int      @map("max_team_advisors_size")
  createdAt           DateTime @default(now()) @map("created_at")
  updatedAt           DateTime @updatedAt @map("updated_at")

  project                Project[]
  applicationProjectType Application_Project_Type[]

  @@map("Project_Types")
}

model Problem_Type {
  problem_type_id Int      @id @default(autoincrement())
  name            String   @unique
  isPredefined    Boolean? @default(false) @map("is_predefined")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  applicationProblemType Application_Problem_Type[]

  @@map("Problem_Types")
}

// ================== CATALOG TABLES ==================
model User_Status {
  user_status_id Int      @id @default(autoincrement())
  name           String
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  users User[]

  @@map("User_Statuses")
}

model Student_Status {
  student_status_id Int      @id @default(autoincrement())
  name              String
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")

  students Student[]

  @@map("Student_Statuses")
}

model Project_Status {
  project_status_id Int      @id @default(autoincrement())
  name              String
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")

  Project Project[]

  @@map("Project_Statuses")
}

// ================== LINKING TABLES ==================

model Application_Project_Type {
  application String @map("uuid_application")
  projectType Int    @map("project_type_id")

  uuidApplication Application  @relation(fields: [application], references: [uuid_application])
  projectTypeId   Project_Type @relation(fields: [projectType], references: [project_type_id])

  @@id([application, projectType])
  @@map("Application_Project_Types")
}

model Application_Faculty {
  application String @map("uuid_application")
  faculty     Int    @map("faculty_id")

  uuidApplication Application @relation(fields: [application], references: [uuid_application])
  facultyTypeId   Faculty     @relation(fields: [faculty], references: [faculty_id])

  @@id([application, faculty])
  @@map("Application_Faculties")
}

model Application_Problem_Type {
  application String @map("uuid_application")
  problemType Int    @map("problem_type_id")

  uuidApplication Application  @relation(fields: [application], references: [uuid_application])
  problemTypeId   Problem_Type @relation(fields: [problemType], references: [problem_type_id])

  @@id([application, problemType])
  @@map("Application_Problem_Types")
}

// ================== OTHERS MODELS ==================
model File {
  uuid_file    String   @id @default(uuid())
  storedPath   String   @map("stored_path")
  storedName   String?  @map("stored_name")
  originalName String?  @map("original_name")
  mimetype     String
  fileSize     Int      @map("file_size")
  fileKind     String   @map("file_kind")
  isAsset      Boolean? @default(false) @map("is_asset")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  File_Link File_Link[]

  @@map("Files")
}

model File_Link {
  file_link_id Int      @id @default(autoincrement())
  modelTarget  String   @map("model_target")
  uuidTarget   String   @map("uuid_target")
  purpose      String
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  uuidFile String @map("uuid_file")
  file     File   @relation(fields: [uuidFile], references: [uuid_file])

  @@unique([modelTarget, uuidTarget, purpose])
  @@map("File_Links")
}
