{
  "get": {
    "summary": "Get table schema",
    "description": "Retrieves the schema definition (field names, types, nullability) for a specific table.",
    "tags": ["Admin"],
    "security": [{ "BearerAuth": [] }],
    "parameters": [{ "$ref": "../common/ParameterTable.json" }],
    "responses": {
      "200": {
        "description": "Table schema definition.",
        "content": {
          "application/json": {
            "schema": { "$ref": "../responses/MetadataTableFieldsSuccess.json" }
          }
        }
      },
      "400": { "$ref": "../../../responses/Error400.json" },
      "401": { "$ref": "../../../responses/Error401.json" },
      "403": { "$ref": "../../../responses/Error403.json" },
      "404": { "$ref": "../../../responses/Error404.json" },
      "500": { "$ref": "../../../responses/Error500.json" }
    }
  }
}
