{
  "type": "object",
  "description": "Summary details for a project listing.",
  "properties": {
    "uuid_project": { "type": "string", "format": "uuid" },
    "title": {
      "type": "string",
      "example": "New University Project Initiative"
    },
    "shortDescription": {
      "type": "string",
      "example": "A brief summary of the project."
    },
    "uuidApplication": { "type": "string", "format": "uuid" },
    "status": {
      "type": "object",
      "description": "The current status of the project.",
      "properties": {
        "name": {
          "type": "string",
          "example": "Aprobado"
        },
        "slug": {
          "type": "string",
          "example": "approved"
        }
      }
    },
    "bannerUrl": {
      "type": "string",
      "format": "url",
      "nullable": true,
      "example": "/file/APPLICATION/BANNER/123e4567-e89b-12d3-a456-426614174000",
      "description": "URL to the application's banner image. Can be null."
    }
  },
  "required": [
    "uuid_project",
    "title",
    "shortDescription",
    "uuidApplication",
    "bannerUrl"
  ]
}
