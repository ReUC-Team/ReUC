{
  "type": "object",
  "description": "The core information about the project.",
  "properties": {
    "title": {
      "type": "string",
      "example": "AI Research Initiative"
    },
    "shortDescription": {
      "type": "string",
      "example": "A brief summary of the project."
    },
    "description": {
      "type": "string",
      "example": "A full, detailed description of the project."
    },
    "estimatedEffortHours": {
      "type": "integer",
      "example": 120,
      "nullable": true
    },
    "estimatedDate": {
      "type": "string",
      "format": "date-time",
      "example": "2026-05-20T00:00:00Z"
    },
    "createdAt": {
      "type": "string",
      "format": "date-time",
      "example": "2025-11-17T10:00:00Z"
    },
    "status": {
      "type": "object",
      "properties": {
        "name": { "type": "string", "example": "Active" },
        "description": {
          "type": "string",
          "example": "Project is currently ongoing."
        }
      }
    },
    "projectType": {
      "type": "object",
      "properties": {
        "name": { "type": "string", "example": "Intership" },
        "minEstimatedMonths": { "type": "integer", "example": 12 },
        "maxEstimatedMonths": {
          "type": "integer",
          "example": 24,
          "nullable": true
        },
        "requiredHours": { "type": "integer", "example": 400, "nullable": true }
      }
    },
    "faculties": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "name": { "type": "string" }
        }
      }
    },
    "problemTypes": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "name": { "type": "string" }
        }
      }
    },
    "teamMembers": {
      "type": "array",
      "description": "List of members currently assigned to the project.",
      "items": {
        "type": "object",
        "properties": {
          "uuid_user": { "type": "string", "format": "uuid" },
          "fullName": { "type": "string", "example": "John Smith" },
          "email": { "type": "string", "format": "email" },
          "universityId": { "type": "string", "nullable": true },
          "role": { "type": "string", "example": "Developer" }
        }
      }
    }
  }
}
